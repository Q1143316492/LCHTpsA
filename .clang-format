# Minimal clang-format to enforce 4-space indentation for this project only
# Keep changes conservative to avoid massive diffs
Language: Cpp
UseTab: Never
IndentWidth: 4
TabWidth: 4
ContinuationIndentWidth: 4
# Avoid reflowing code or reordering includes unintentionally
ColumnLimit: 0
SortIncludes: false
# Common UE-friendly tweak so access specifiers align with class body
AccessModifierOffset: -4
